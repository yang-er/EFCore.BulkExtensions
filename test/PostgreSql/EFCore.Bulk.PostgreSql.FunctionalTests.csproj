<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
    <IsPackable>false</IsPackable>
    <DefineConstants Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">$(DefineConstants);EFCORE31</DefineConstants>
    <DefineConstants Condition=" '$(TargetFramework)' == 'net5.0' ">$(DefineConstants);EFCORE50</DefineConstants>
    <DefineConstants>$(DefineConstants);RELATIONAL;POSTGRE_SQL</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="16.5.0" />
    <PackageReference Include="xunit" Version="2.4.0" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.0" />
    <PackageReference Include="coverlet.collector" Version="1.2.0" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="..\Common\*.cs" Exclude="..\Common\MergeInto.cs" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\TestUtilities\EFCore.TestUtilities.csproj" />
    <ProjectReference Include="..\..\src\PostgreSql\Microsoft.EntityFrameworkCore.Bulk.PostgreSql-3.1.csproj" Condition=" '$(TargetFramework)' == 'netcoreapp3.1' " />
    <ProjectReference Include="..\..\src\PostgreSql\Microsoft.EntityFrameworkCore.Bulk.PostgreSql-5.0.csproj" Condition=" '$(TargetFramework)' == 'net5.0' " />
  </ItemGroup>

</Project>
